<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_header_account" >

        <EditTextPreference
            android:key="username_pref_edit_text"
            android:title="@string/pref_title_username"
            android:defaultValue="@string/pref_default_username"
            android:summary="Choose a username"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <Preference
            android:key="link_facebook_pref_btn"
            android:title="Facebook"
            android:summary="Connect a Facebook account to Convoy" />

        <Preference
            android:key="logout_pref_btn"
            android:title="Logout"
            android:summary="Log out on this device" />

    </PreferenceCategory>

</PreferenceScreen>
